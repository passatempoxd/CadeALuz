    <script>
        let db;

        async function initializeFirebase() {
            try {
                const response = await fetch('/api/firebase-config');
                if (!response.ok) {
                    throw new Error('Falha ao buscar a configuraÃ§Ã£o do Firebase.');
                }
                const firebaseConfig = await response.json();

                firebase.initializeApp(firebaseConfig);
                db = firebase.firestore();
                
                fetchAndDisplayOutages();
            } catch (error) {
                console.error("Erro crÃ­tico ao inicializar o Firebase:", error);
                alert('Erro crÃ­tico: NÃ£o foi possÃ­vel conectar ao banco de dados. Verifique a configuraÃ§Ã£o da sua API serverless.');
            }
        }

        function createSecurePopup(item) {
            const popup = document.createElement('div');
            
            const title = document.createElement('h4');
            title.textContent = item.problemType || 'Problema';
            
            const descLabel = document.createElement('strong');
            descLabel.textContent = 'DescriÃ§Ã£o: ';
            
            const descText = document.createTextNode(item.description || 'Nenhuma');
            
            const descPara = document.createElement('p');
            descPara.appendChild(descLabel);
            descPara.appendChild(descText);
            
            const reporterLabel = document.createElement('strong');
            reporterLabel.textContent = 'Reportado por: ';
            
            const reporterText = document.createTextNode(item.userName || 'AnÃ´nimo');
            
            const reporterPara = document.createElement('p');
            reporterPara.appendChild(reporterLabel);
            reporterPara.appendChild(reporterText);
            
            const timestampPara = document.createElement('p');
            const timestampLabel = document.createElement('strong');
            timestampLabel.textContent = 'Reportado em: ';
            const timestampText = document.createTextNode(item.timestamp ? item.timestamp.toDate().toLocaleString('pt-BR') : 'Data indisponÃ­vel');
            timestampPara.appendChild(timestampLabel);
            timestampPara.appendChild(timestampText);
            
            const resolveBtn = document.createElement('button');
            resolveBtn.className = 'resolve-btn';
            resolveBtn.dataset.id = item.id;
            resolveBtn.textContent = 'A Energia Voltou!';
            
            popup.appendChild(title);
            popup.appendChild(descPara);
            popup.appendChild(reporterPara);
            popup.appendChild(timestampPara);
            popup.appendChild(resolveBtn);
            
            return popup;
        }

        const initialCoords = [-23.5244, -46.8354];
        const isMobile = window.innerWidth <= 1200;
        let map; 
        let mapPreview;
        
        let currentMarker = null;
        let previewMarker = null;
        let recenterButtonElement = null;
        let lastKnownCoords = null;
        let isHeatmapMode = true;
        let heatmapLayer = null;

        function createMapInstance(containerId, options = {}) {
            const defaultOptions = {
                dragging: true,
                zoomControl: true,
                scrollWheelZoom: true,
                doubleClickZoom: true,
                zoom: 14
            };
            
            const mapOptions = { ...defaultOptions, ...options };
            const mapInstance = L.map(containerId, mapOptions).setView(initialCoords, mapOptions.zoom);
            
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a>',
                maxZoom: 19
            }).addTo(mapInstance);
            
            mapInstance.outageMarkersLayer = L.layerGroup().addTo(mapInstance);
            
            return mapInstance;
        }
        
        function toggleVisualization() {
            isHeatmapMode = !isHeatmapMode;
            
            const markerLegend = document.getElementById('marker-legend');
            const heatmapLegendEl = document.getElementById('heatmap-legend');
            
            if (isHeatmapMode) {
                if (markerLegend) markerLegend.style.display = 'none';
                if (heatmapLegendEl) heatmapLegendEl.classList.add('active');
            } else {
                if (markerLegend) markerLegend.style.display = 'block';
                if (heatmapLegendEl) heatmapLegendEl.classList.remove('active');
            }
            
            updateMapMarkers(map, outageDataCache);
            
            showStatus(isHeatmapMode ? 'Modo Mapa de Calor ativado' : 'Modo Marcadores ativado', 'info');
        }
        
        function clearSelection() {
            lastKnownCoords = null;
            document.getElementById('latitude').value = '';
            document.getElementById('longitude').value = '';
            
            if (currentMarker && map) {
                map.removeLayer(currentMarker);
                currentMarker = null;
            }
            
            if (previewMarker && mapPreview) {
                mapPreview.removeLayer(previewMarker);
                previewMarker = null;
            }
            
            const clearBtn = document.getElementById('clearBtn');
            if (clearBtn) {
                clearBtn.classList.remove('visible');
            }
            
            if (recenterButtonElement) {
                L.DomUtil.addClass(recenterButtonElement, 'leaflet-disabled');
            }
            
            showStatus('SeleÃ§Ã£o removida', 'info');
        }
        
        function addControlsToMap(mapInstance) {
            const LocateControl = L.Control.extend({
                onAdd: function() {
                    const btn = L.DomUtil.create('div', 'leaflet-bar leaflet-control leaflet-control-locate');
                    btn.innerHTML = `<a href="#" title="Minha LocalizaÃ§Ã£o">ð¯</a>`;
                    L.DomEvent.on(btn, 'click', L.DomEvent.stop).on(btn, 'click', locateUser);
                    return btn;
                }
            });
            const RecenterControl = L.Control.extend({
                onAdd: function() {
                    const btn = L.DomUtil.create('div', 'leaflet-bar leaflet-control leaflet-control-recenter');
                    btn.innerHTML = `<a href="#" title="Centralizar no Marcador">ð</a>`;
                    recenterButtonElement = btn;
                    L.DomUtil.addClass(recenterButtonElement, 'leaflet-disabled');
                    L.DomEvent.on(btn, 'click', L.DomEvent.stop).on(btn, 'click', recenterMap);
                    return btn;
                }
            });
            const ToggleControl = L.Control.extend({
                onAdd: function() {
                    const btn = L.DomUtil.create('div', 'leaflet-bar leaflet-control leaflet-control-toggle');
                    btn.innerHTML = `<a href="#" title="Alternar VisualizaÃ§Ã£o">ð¥</a>`;
                    L.DomEvent.on(btn, 'click', L.DomEvent.stop).on(btn, 'click', toggleVisualization);
                    return btn;
                }
            });
            new LocateControl({ position: 'topleft' }).addTo(mapInstance);
            new RecenterControl({ position: 'topleft' }).addTo(mapInstance);
            new ToggleControl({ position: 'topleft' }).addTo(mapInstance);
        }

        if (isMobile) {
            mapPreview = createMapInstance('map-preview', {
                dragging: false,
                zoomControl: false,
                scrollWheelZoom: false,
                doubleClickZoom: false,
                zoom: 13
            });
            
            document.getElementById('map-preview').addEventListener('click', () => {
                document.getElementById('map-modal').classList.add('active');
                if (!map) {
                    map = createMapInstance('modal-map', { zoomControl: true });
                    addControlsToMap(map);
                    updateMapMarkers(map, outageDataCache); 
                    
                    if(lastKnownCoords) {
                        map.setView([lastKnownCoords.lat, lastKnownCoords.lng], 16);
                        updateSelectionMarker(lastKnownCoords.lat, lastKnownCoords.lng);
                    }
                    
                    map.on('click', (e) => {
                        updateSelectionMarker(e.latlng.lat, e.latlng.lng);
                    });
                }
                setTimeout(() => map.invalidateSize(), 100);
            });
            document.getElementById('modal-close-btn').addEventListener('click', () => {
                document.getElementById('map-modal').classList.remove('active');
            });
        } else {
            map = createMapInstance('map', { zoomControl: true });
            addControlsToMap(map);
            map.on('click', (e) => updateSelectionMarker(e.latlng.lat, e.latlng.lng));
            
            const markerLegend = document.getElementById('marker-legend');
            const heatmapLegendEl = document.getElementById('heatmap-legend');
            if (markerLegend) markerLegend.style.display = 'none';
            if (heatmapLegendEl) heatmapLegendEl.classList.add('active');
        }

        const icons = {
            red: new L.Icon({
                iconUrl: 'https://raw.githubusercontent.com/pointhi/leaflet-color-markers/master/img/marker-icon-2x-red.png',
                shadowUrl: 'https://cdnjs.cloudflare.com/ajax/libs/leaflet/0.7.7/images/marker-shadow.png',
                iconSize: [25, 41], iconAnchor: [12, 41], popupAnchor: [1, -34], shadowSize: [41, 41]
            }),
            orange: new L.Icon({
                iconUrl: 'https://raw.githubusercontent.com/pointhi/leaflet-color-markers/master/img/marker-icon-2x-orange.png',
                shadowUrl: 'https://cdnjs.cloudflare.com/ajax/libs/leaflet/0.7.7/images/marker-shadow.png',
                iconSize: [25, 41], iconAnchor: [12, 41], popupAnchor: [1, -34], shadowSize: [41, 41]
            }),
            yellow: new L.Icon({
                iconUrl: 'https://raw.githubusercontent.com/pointhi/leaflet-color-markers/master/img/marker-icon-2x-yellow.png',
                shadowUrl: 'https://cdnjs.cloudflare.com/ajax/libs/leaflet/0.7.7/images/marker-shadow.png',
                iconSize: [25, 41], iconAnchor: [12, 41], popupAnchor: [1, -34], shadowSize: [41, 41]
            }),
            blue: new L.Icon({
                iconUrl: 'https://raw.githubusercontent.com/pointhi/leaflet-color-markers/master/img/marker-icon-2x-blue.png',
                shadowUrl: 'https://cdnjs.cloudflare.com/ajax/libs/leaflet/0.7.7/images/marker-shadow.png',
                iconSize: [25, 41], iconAnchor: [12, 41], popupAnchor: [1, -34], shadowSize: [41, 41]
            }),
            grey: new L.Icon({
                iconUrl: 'https://raw.githubusercontent.com/pointhi/leaflet-color-markers/master/img/marker-icon-2x-grey.png',
                shadowUrl: 'https://cdnjs.cloudflare.com/ajax/libs/leaflet/0.7.7/images/marker-shadow.png',
                iconSize: [25, 41], iconAnchor: [12, 41], popupAnchor: [1, -34], shadowSize: [41, 41]
            }),
            selection: new L.Icon({
                iconUrl: 'https://raw.githubusercontent.com/pointhi/leaflet-color-markers/master/img/marker-icon-2x-violet.png',
                shadowUrl: 'https://cdnjs.cloudflare.com/ajax/libs/leaflet/0.7.7/images/marker-shadow.png',
                iconSize: [25, 41], iconAnchor: [12, 41], popupAnchor: [1, -34], shadowSize: [41, 41]
            })
        };

        function getIconForProblem(problemType) {
            switch (problemType) {
                case "Falta de Energia Total": return icons.red;
                case "Poste com FaÃ­scas": return icons.orange;
                case "Fio CaÃ­do na Rua": return icons.yellow;
                case "Luz Piscando": return icons.blue;
                default: return icons.grey;
            }
        }
        
        function getIntensityForProblem(problemType) {
            switch (problemType) {
                case "Falta de Energia Total": return 1.0;
                case "Poste com FaÃ­scas": return 0.8;
                case "Fio CaÃ­do na Rua": return 0.9;
                case "Luz Piscando": return 0.6;
                default: return 0.5;
            }
        }
        
        let outageDataCache = [];
        
        function fetchAndDisplayOutages() {
            if (!db) return;
            db.collection('outages').onSnapshot(snapshot => {
                
                outageDataCache = [];
                snapshot.forEach(doc => {
                    const data = doc.data();
                    data.id = doc.id;
                    outageDataCache.push(data);
                });

                if (map && map.outageMarkersLayer) {
                    updateMapMarkers(map, outageDataCache);
                }
                
                if (mapPreview && mapPreview.outageMarkersLayer) {
                    updateMapMarkers(mapPreview, outageDataCache, true);
                }

            }, error => { console.error("Erro ao buscar dados: ", error); });
        }

        function updateMapMarkers(mapInstance, data, isPreview = false) {
            mapInstance.outageMarkersLayer.clearLayers();
            
            if (heatmapLayer && mapInstance.hasLayer(heatmapLayer)) {
                mapInstance.removeLayer(heatmapLayer);
                heatmapLayer = null;
            }
            
            if (isHeatmapMode && !isPreview && data.length > 0) {
                const heatmapData = data
                    .filter(item => item.latitude && item.longitude)
                    .map(item => {
                        const intensity = getIntensityForProblem(item.problemType);
                        return [item.latitude, item.longitude, intensity];
                    });
                
                if (heatmapData.length > 0) {
                    heatmapLayer = L.heatLayer(heatmapData, {
                        radius: 30,
                        blur: 25,
                        maxZoom: 17,
                        max: 1.0,
                        minOpacity: 0.5,
                        gradient: {
                            0.0: '#0000ff',
                            0.2: '#00ffff',
                            0.4: '#00ff00',
                            0.6: '#ffff00',
                            0.8: '#ff8c00',
                            1.0: '#ff0000'
                        }
                    }).addTo(mapInstance);
                }
            } else {
                data.forEach(item => {
                    if (!item.latitude || !item.longitude) return;
                    
                    const icon = getIconForProblem(item.problemType);
                    const marker = L.marker([item.latitude, item.longitude], { icon: icon });
                    
                    if (!isPreview) {
                        marker.bindPopup(createSecurePopup(item));
                    }
                    
                    marker.addTo(mapInstance.outageMarkersLayer);
                });
            }
        }

        function isValidCoordinate(lat, lng) {
            return (
                typeof lat === 'number' &&
                typeof lng === 'number' &&
                !isNaN(lat) &&
                !isNaN(lng) &&
                lat >= -90 &&
                lat <= 90 &&
                lng >= -180 &&
                lng <= 180
            );
        }

        function updateSelectionMarker(lat, lng) {
            if (!isValidCoordinate(lat, lng)) {
                showStatus('Coordenadas invÃ¡lidas', 'error');
                return;
            }

            lastKnownCoords = { lat, lng };
            
            document.getElementById('latitude').value = lat.toFixed(6);
            document.getElementById('longitude').value = lng.toFixed(6);

            if (map) {
                if (currentMarker) map.removeLayer(currentMarker);
                currentMarker = L.marker([lat, lng], { icon: icons.selection }).addTo(map);
            }
            
            if (mapPreview) {
                if (previewMarker) mapPreview.removeLayer(previewMarker);
                previewMarker = L.marker([lat, lng], { icon: icons.selection }).addTo(mapPreview);
                mapPreview.setView([lat, lng], 15);
            }

            if (recenterButtonElement) {
                L.DomUtil.removeClass(recenterButtonElement, 'leaflet-disabled');
            }
            
            const clearBtn = document.getElementById('clearBtn');
            if (clearBtn) {
                clearBtn.classList.add('visible');
            }
        }
        
        function locateUser() {
            if (!navigator.geolocation) {
                showStatus('GeolocalizaÃ§Ã£o nÃ£o Ã© suportada.', 'error');
                return;
            }

            showStatus('Buscando sua localizaÃ§Ã£o...', 'info');

            navigator.geolocation.getCurrentPosition(
                (position) => {
                    const lat = position.coords.latitude;
                    const lng = position.coords.longitude;
                    
                    updateSelectionMarker(lat, lng);
                    
                    if(map) {
                       map.setView([lat, lng], 16);
                    }
                    
                    showStatus('LocalizaÃ§Ã£o encontrada!', 'success');
                },
                (error) => {
                    let message = 'NÃ£o foi possÃ­vel obter sua localizaÃ§Ã£o.';
                    switch (error.code) {
                        case error.PERMISSION_DENIED:
                            message = 'VocÃª negou o pedido de GeolocalizaÃ§Ã£o.';
                            break;
                        case error.POSITION_UNAVAILABLE:
                            message = 'InformaÃ§Ã£o de localizaÃ§Ã£o nÃ£o estÃ¡ disponÃ­vel.';
                            break;
                        case error.TIMEOUT:
                            message = 'O pedido de geolocalizaÃ§Ã£o expirou.';
                            break;
                    }
                    showStatus(message, 'error');
                }
            );
        }

        function recenterMap() {
            const targetMap = isMobile ? map : map;
            if(!targetMap) { return; }
            if (currentMarker) {
                targetMap.setView(currentMarker.getLatLng(), 16);
            } else {
                targetMap.setView(initialCoords, 14);
            }
        }

        async function searchWithGeoapify(address) {
            showStatus('Buscando endereÃ§o via Geoapify...', 'info');
            const targetMap = isMobile ? map : map;
            
            const keyResponse = await fetch('/api/geoapify-key');
            if (!keyResponse.ok) {
                throw new Error('NÃ£o foi possÃ­vel obter a chave da API de geolocalizaÃ§Ã£o.');
            }
            const { apiKey } = await keyResponse.json();

            const query = encodeURIComponent(address);
            const url = `https://api.geoapify.com/v1/geocode/search?text=${query}&filter=countrycode:br&apiKey=${apiKey}`;

            const geoapifyResponse = await fetch(url);
            if (!geoapifyResponse.ok) {
                throw new Error('Erro na resposta do serviÃ§o de geolocalizaÃ§Ã£o.');
            }
            const geoapifyData = await geoapifyResponse.json();

            if (geoapifyData.features && geoapifyData.features.length > 0) {
                const bestResult = geoapifyData.features[0];
                const [lng, lat] = bestResult.geometry.coordinates;
                
                if (!isValidCoordinate(lat, lng)) {
                    throw new Error('Coordenadas invÃ¡lidas retornadas pela API.');
                }
                
                targetMap.setView([lat, lng], 17);
                updateSelectionMarker(lat, lng);
                showStatus('EndereÃ§o encontrado!', 'success');
            } else {
                showStatus('EndereÃ§o nÃ£o encontrado. Tente ser mais especÃ­fico.', 'error');
            }
        }

        async function geocodeAddress() {
            const targetMap = isMobile ? map : map;
            if (!targetMap) {
                showStatus('Abra o mapa primeiro para buscar um endereÃ§o.', 'info');
                return;
            }
            const userInput = document.getElementById('address').value.trim();
            if (!userInput) {
                showStatus('Por favor, digite um endereÃ§o para buscar.', 'error');
                return;
            }

            showStatus('Buscando localizaÃ§Ã£o...', 'info');
            const cepRegex = /^\d{5}-?\d{3}$/;

            try {
                if (cepRegex.test(userInput)) {
                    showStatus('Consultando CEP via BrasilAPI...', 'info');
                    const cep = userInput.replace('-', '');
                    const url = `https://brasilapi.com.br/api/cep/v2/${cep}`;
                    
                    const brasilApiResponse = await fetch(url);
                    
                    if (!brasilApiResponse.ok) {
                        const errorText = await brasilApiResponse.text();
                        console.error('Erro BrasilAPI:', errorText);
                        throw new Error('CEP nÃ£o encontrado ou invÃ¡lido.');
                    }
                    
                    const cepData = await brasilApiResponse.json();
                    
                    if (!cepData.street || !cepData.city) {
                        throw new Error('CEP encontrado, mas dados incompletos.');
                    }

                    let latitude, longitude;

                    if (cepData.location && cepData.location.coordinates) {
                        latitude = parseFloat(cepData.location.coordinates.latitude);
                        longitude = parseFloat(cepData.location.coordinates.longitude);
                    }

                    if (isValidCoordinate(latitude, longitude)) {
                        targetMap.setView([latitude, longitude], 17);
                        updateSelectionMarker(latitude, longitude);
                        showStatus(`CEP encontrado: ${cepData.street}`, 'success');
                        return;
                    }
                    
                    showStatus('CEP encontrado. Refinando localizaÃ§Ã£o com Geoapify...', 'info');
                    const fallbackAddress = `${cepData.street}, ${cepData.city}, ${cepData.state}, Brasil`;
                    await searchWithGeoapify(fallbackAddress);

                } else {
                    await searchWithGeoapify(userInput + ', Brasil');
                }
            } catch (error) {
                console.error("Erro na geocodificaÃ§Ã£o:", error);
                showStatus(error.message || 'Erro ao buscar endereÃ§o. Verifique sua conexÃ£o.', 'error');
            }
        }

        document.getElementById('reportForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const submitBtn = document.getElementById('submitBtn');
            
            const lat = parseFloat(document.getElementById('latitude').value);
            const lng = parseFloat(document.getElementById('longitude').value);
            
            if (!document.getElementById('problemType').value) {
                showStatus('Selecione um tipo de problema.', 'error');
                return;
            }
            
            if (!isValidCoordinate(lat, lng)) {
                showStatus('Selecione um local vÃ¡lido no mapa.', 'error');
                return;
            }
            
            submitBtn.disabled = true;
            submitBtn.textContent = 'Enviando...';
            
            const userName = document.getElementById('userName').value.trim() || "AnÃ´nimo";
            const reportData = {
                problemType: document.getElementById('problemType').value,
                description: document.getElementById('description').value.trim(),
                latitude: lat,
                longitude: lng,
                timestamp: firebase.firestore.FieldValue.serverTimestamp(),
                userName: userName
            };
            
            try {
                await db.collection('outages').add(reportData);
                showStatus('Problema reportado com sucesso!', 'success');
                document.getElementById('reportForm').reset();
                clearSelection();
            } catch (error) {
                console.error('Erro ao enviar reporte:', error);
                showStatus('Erro ao enviar o reporte. Tente novamente.', 'error');
            } finally {
                submitBtn.disabled = false;
                submitBtn.textContent = 'Reportar Problema';
            }
        });
        
        async function deleteOutage(docId) {
            if (!db || !docId) return;
            if (!confirm('VocÃª tem certeza que a energia neste local foi restabelecida?')) { return; }
            try {
                await db.collection('outages').doc(docId).delete();
                showStatus('Obrigado por avisar! Ponto removido do mapa.', 'success');
            } catch (error) {
                console.error('Erro ao deletar:', error);
                showStatus('Ocorreu um erro ao remover o ponto.', 'error');
            }
        }

        document.addEventListener('click', function(e) {
            if (e.target && e.target.matches('.resolve-btn')) {
                const docId = e.target.dataset.id;
                deleteOutage(docId);
            }
        });

        document.getElementById('clearBtn').addEventListener('click', clearSelection);
        document.getElementById('locateBtn').addEventListener('click', locateUser);
        document.getElementById('searchBtn').addEventListener('click', geocodeAddress);
        document.getElementById('address').addEventListener('keydown', (e) => {
            if (e.key === 'Enter') { e.preventDefault(); geocodeAddress(); }
        });

        function showStatus(message, type) {
            const statusEl = document.getElementById('statusMessage');
            if (!statusEl) return;
            
            if (statusEl.hideTimeout) {
                clearTimeout(statusEl.hideTimeout);
                delete statusEl.hideTimeout;
            }

            statusEl.textContent = message;
            statusEl.className = `status-message ${type} show`;
            
            statusEl.hideTimeout = setTimeout(() => {
                statusEl.classList.remove('show');
                delete statusEl.hideTimeout;
            }, 4000);
        }

        initializeFirebase();
    </script>
